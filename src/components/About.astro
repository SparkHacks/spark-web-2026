---
import MedalImg from "../assets/about/medal.svg";
import CrowdImg from "../assets/about/people.svg";
import SquiggleImg from "../assets/about/squiggle.svg";
import AboutText from "../assets/about/aboutText.svg";
import SpotlightImg from "../assets/about/spotlight.svg";
import SparkleImg from "../assets/about/sparkle.svg";
---

<div class="flex flex-col place-content-center items-center bg-[#1F0303] text-white gap-5 pb-30"
	id="about">
	<div class="w-full">
		<svg height="100%" width="100%" viewBox="0 0 100 75">
			<svg x="-8%" y="-10%" viewBox="0 0 1750 500" height="120%" width="120%" xmlns="http://www.w3.org/2000/svg">
				<filter id="gaussianBlur1">
					<feGaussianBlur stdDeviation="30" />
				</filter>
				
				<g><CrowdImg x="7%" y="40%" /></g>
                
                <g class="aboutSparkle"><SparkleImg class="sparkle" x="45%" y="70%" /></g>
                <g class="aboutSparkle"><SparkleImg class="sparkle" x="10%" y="55%" /></g>
                <g class="aboutSparkle"><SparkleImg class="sparkle" x="75%" y="100%" /></g>
                
                <ellipse id="bottom" cx="54.60%" cy="139.5%" rx="345" ry="15" fill="#FFF0D2" /></g>
				<g><SquiggleImg x="-5%" y="0%" height="100%" width="100%" /></g>
				<g><SquiggleImg id="squiggle-overlay" filter="url(#gaussianBlur1)" style="mix-blend-mode: plus-lighter;" x="-5%" y="0%" height="100%" width="100%" /></g>
				<g><AboutText x="0%" y="-30%" height="75%" width="75%"/></g>
				
                
                <g><MedalImg x="15%" y="40%" height="100%" width="100%" /></g>
				<g><SpotlightImg id="spotlight" x="35%" y="-30%" style="opacity: 80%" style="mix-blend-mode: plus-lighter;" /></g>
			</svg>
		</svg>
	</div>

	<p class="text-2xl text-center leading-relaxed w-[75%] md:w-[65%] ">
		SparkHacks is a 24-hour hackathon hosted by the Department of Computer Science at the
		University of Illinois Chicago along with several different CS-based student organizations.
		This is the fourth iteration of SparkHacks and aims to provide an environment to learn,
		collaborate with peers, and build a project that tackles our problem statements for a chance
		to win prizes!
	</p>
</div>

<script>
	var sparkles = document.querySelectorAll(".sparkle")

	if (!sparkles)
	{
		console.error("Sparkles not found");	
	}
	else
	{
		sparkles.forEach((s, i) => {
			var rng = Math.random() * 3;
			(s as HTMLElement).style.animationDelay = `${rng}s`;
		})
	}

</script>

<style>
	#about
	{
		background-image: linear-gradient(#1D030300, #000000, #000000, #1D030300);
	}

	/* webkit animations */
	@-webkit-keyframes spotlight-animation 
	{
		0% 
		{
			-webkit-transform: skew(0deg, 0deg);
		}
		50% 
		{
			-webkit-transform: skew(-25deg, 0deg);
		}
		100% 
		{
			-webkit-transform: skew(0deg, 0deg);
		}
	}

	/* regular animations */
	@keyframes spotlight-animation 
	{
		0% 
		{
			transform: skew(0deg, 0deg);
		}
		50% 
		{
			transform: skew(-25deg, 0deg);
		}
		100% 
		{
			transform: skew(0deg, 0deg);
		}
	}

	@keyframes squiggle-animation 
	{
		0% 
		{
			opacity: 0%;
		}
		40% 
		{
			opacity: 0%;
		}
		50% 
		{
			opacity: 0%;
		}
		60% 
		{
			opacity: 75%;
		}
		85%
		{
			opacity: 100%;
		}
		100% 
		{
			opacity: 0%;
		}
	}

    @keyframes flash-animation
    {
        0% 
		{
			opacity: 100%;
		}
		35% 
		{
			opacity: 100%;
            transform: rotate(5deg) scale(.95);
		}
		50% 
		{
			opacity: 0%;
		}
		65% 
		{
			opacity: 100%;
		}
		100% 
		{
			opacity: 100%;
		}
    }

	#spotlight 
	{
		-webkit-animation-name: spotlight-animation;
		-webkit-animation-duration: 5s;
		-webkit-animation-delay: 0.01s;
		-webkit-animation-iteration-count: infinite;
		-webkit-animation-timing-function: ease-in-out;
		
		animation: spotlight-animation 5s ease-in-out infinite;
	}

	#bottom 
	{
		-webkit-animation: none !important;

		animation: spotlight-animation 5s ease-in-out infinite;
	}

	#squiggle-overlay 
	{
		animation: squiggle-animation 8s ease-in infinite;
	}

    .sparkle
    {
		transform-origin: center;
        animation: flash-animation 3s ease-in-out infinite;
    }
</style>

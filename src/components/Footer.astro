---
import InstagramIcon from "../../public/socialIcons/instagram-logo.svg";
import GitHubIcon from "../../public/socialIcons/github-logo.svg";
import LinkedInIcon from "../../public/socialIcons/linkedin-logo.svg";
---

<footer
	class="grid md:h-40 grid-flow-row grid-cols-1 md:grid-cols-3 gap-4 place-content-center items-center px-10 text-center text-white z-250"
	style="background: linear-gradient(#14270F 23%, #071D02 63%)"
>
	<div class="font-bold flex flex-col justify-center items-center">
		<img src="sparkhacks-logo.svg" class="w-25"/>
	</div>
	<div class="font-bold flex flex-col">
		<h1 class="tracking-widest">SparkHacks 2026</h1>
		<h2><a href="mailto:sparkhacks@uic.edu">sparkhacks@uic.edu</a></h2>
		<p>
			<a href="https://github.com/SparkHacks/spark-web-2026">{`Made by the SparkHacks team <3`}</a>
		</p>
	</div>
	<div class="flex flex-col font-bold">
		<h1 class="tracking-widest">Follow Us</h1>
		<div class="flex gap-5 justify-center">
			<a href="https://www.instagram.com/sparkhacksuic/">
				<div class="w-15"><InstagramIcon width="100%" height="100%" /></div>
			</a>
			<a href="https://github.com/SparkHacks">
				<div class="w-15"><GitHubIcon width="100%" height="100%" /></div>
			</a>
			<a href="https://www.linkedin.com/company/sparkhacks/">
				<div class="w-15"><LinkedInIcon width="100%" height="100%" /></div>
			</a>
		</div>
	</div>
</footer>

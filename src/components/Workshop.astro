      id="lampGroupRight"
      class="hidden md:block absolute top-0 right-1/2 transform translate-x-140 w-[400px] h-[600px] origin-[360px_40px] transition-all duration-700 ease-out pointer-events-none opacity-0"
      style="transform: rotate(0deg);"
    >
      <img src={lamp.src} alt="lamp" class="absolute top-0 right-0 w-20 h-20 z-10 -scale-x-100" />
      <img src={lampSpotlight.src} alt="spotlight beam" class="absolute top-[60px] right-[-30px] w-[400px] -scale-x-100 blur-sm" />
    </div>
    
    <!-- Posters -->
    <div id="posterRow" class="flex flex-col md:flex-row justify-center items-center gap-4 md:gap-8 px-4 md:px-0 mb-16">
      {posterBackgrounds.map((bg, index) => (

---
import FrontEnvelope from '../assets/envelope/frontEnvelope.svg';
import BackEnvelope from '../assets/envelope/backEnvelope.svg';
---

<div class="flex flex-col place-content-center items-center bg-[#10042A] overflow-hidden h-[100vh]">
    <svg viewBox="0 -50 700 1000" width="100%">
        <BackEnvelope />
        <FrontEnvelope x="167.5" y="184" />

        <foreignObject width="100%" height="100%" x="-54" y="202" transform="scale(1.2)">
            <div class="flex flex-col font-[Kumbh_Sans,sans-serif] text-center items-center bg-[#FFF0D2] border-[#C6822A] border-3 px-18 pt-7">
                <h2 class="text-xl font-bold text-[#C6822A] mb-12">You have been formally invited</h2>

                <h1 class="text-5xl font-bold text-[#A54848] my-2">2026 SparkHacks</h1>

                <p class="text-lg font-bold text-[#7A1E1E] my-6">University of Illinois at Chicago
                    <br>February 7th - 8th
                    <br>Annual Hackathon</p>

                <p class="text-lg text-[#A54848]">Join us for a weekend of sophisticated programming and an awards ceremony you will never forget!
                    <br><br>Reserve your seat and apply now!</p>
                
                <div class="bg-[#EF2427] text-lg font-bold text-white rounded-lg py-1 px-12 my-10 cursor-pointer">Apply</div>
            </div>
        </foreignObject>
    </svg>
    </div>
</div>

<style>
    @import url('https://fonts.googleapis.com/css2?family=Kumbh+Sans:wght@100..900&display=swap');
</style>
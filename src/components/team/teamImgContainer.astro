---
const { name, team, img } = Astro.props;
---
<div class="min-w-128px w-128px bg-gray-800">
  <div class="flex py-1 border-y-2 border-white bg-gray-400">
    <div class="film-square"></div>
    <div class="film-square"></div>
    <div class="film-square"></div>
    <div class="film-square"></div>
  </div>

  <div class="flex flex-col items-center py-2 text-white mx-2">
    <img src={`src/assets/${img}`} class="h-36 w-auto mx-3 rounded-lg -mb-4" />
    <p 
      class="text-lg font-semibold relative transform translate-y-1 stroke-black" 
      style="-webkit-text-stroke: 1px black;"
    >
      {name}
    </p>
    <p class="text-sm opacity-80">{team}</p>
  </div>
  
    <div class="flex justify-evenly py-1 border-y-2 border-white bg-gray-400">
      <div class="film-square"></div>
      <div class="film-square"></div>
      <div class="film-square"></div>
      <div class="film-square"></div>
  </div>
</div>

<style>
  .film-square {
    border-width: 2px;
    border-color: white;
    width: 12px;
    height: 12px;
    border-radius: 3px;
    background-color: black;
    margin-left: 32px;
  }
</style>